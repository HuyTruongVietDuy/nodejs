<%- include('../layout/header') %>

<%- include('../layout/aside') %>
      
      
        <!-- ============================================================== -->
        <!-- End Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb">
                <div class="row align-items-center">
                    <div class="col-md-6 col-8 align-self-center">
                        <h3 class="page-title mb-0 p-0">Dashboard</h3>
                        <div class="d-flex align-items-center">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Danh Sách Sản Phẩm [ ListProduct ]</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                  
                </div>
            </div>
         
            <div class="container-fluid">
                
            <div class="col-md-1 col-4 ">
                <div class="text-end upgrade-btn">
                    <a href="/admin/add-Product"
                        class="btn btn-danger d-none d-md-inline-block text-white" target="_blank"> ADD Product </a>
                </div>
            </div>   
            <br>
                <!-- Search form -->
                <form action="/admin/search-product" method="post" class="mb-3">
                    <div class="input-group">
                        <input type="text" name="search" class="form-control" placeholder="Search by name or category">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </form>
                
                <!-- Select box for category filter -->
                
                

                <div class="row">
                    <!-- column -->
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Danh sách sản phẩm</h4>
                                <h6 class="card-subtitle">Dữ liệu từ cơ sở dữ liệu</h6>
                                <div class="table-responsive">
                                        <table class="table user-table">
                                            <thead>
                                                <tr>
                                                    <th class="border-top-0">ID Sản phẩm</th>
                                                    <th class="border-top-0">Loại</th>
                                                    <th class="border-top-0">Tên sản phẩm</th>
                                                    <th class="border-top-0">Hình ảnh</th>
                                                    <th class="border-top-0">Mô tả</th>
                                                    <th class="border-top-0">Ngày sản xuất</th>
                                                    <th class="border-top-0">Giá</th>
                                                    <th class="border-top-0">Chức năng</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% for (let i = 0; i < listSach.length; i++) { %>
                                                    <tr>
                                                        <td><%= listSach[i].idProduct %></td>
                                                        <td><%= listSach[i].nameCategory %></td>
                                                        <td><%= listSach[i].nameProduct %></td>
                                                        <td><img src="/images/<%= listSach[i].images %>" alt="Product Image" style="width: 50px; height: 50px;"></td>
                                                        <td><%= listSach[i].sortDescription %></td>
                                                        <td><%= listSach[i].dateProduct %></td>
                                                        <td><%= listSach[i].priceProduct.toLocaleString('vi-VN') %> VNĐ</td>

                                                    
                                                        <td>
                                                            <!-- Nút Sửa -->
                                                            <a href="/admin/editproduct/<%= listSach[i].idProduct %>" class="btn btn-primary" onclick="return confirm('Bạn có chắc muốn sửa không?')">Sửa</a>
                                                        
                                                            <!-- Nút Xóa -->
                                                            <a href="/admin/deleteproduct/<%= listSach[i].idProduct %>" class="btn btn-danger"  onclick="return confirm('Bạn có chắc muốn Xóa không?')">Xóa</a>
                                                        </td>
                                                        
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
          
            
            
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Right sidebar -->
                <!-- ============================================================== -->
                <!-- .right-sidebar -->
                <!-- ============================================================== -->
                <!-- End Right sidebar -->
                <!-- ============================================================== -->
            </div>
            <%- include('../layout/footer') %>