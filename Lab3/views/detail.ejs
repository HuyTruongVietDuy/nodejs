<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Truong Quang Huy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
   <style>
    /* detail.css */

body {
  font-family: 'Arial', sans-serif;
  margin: 0;
  padding: 0;
}

.container {
  max-width: 800px;
 
}

.container aside{
    float: left;
    width: 400px;
}

.container aside img{
    width: 80%;
}




   </style>
  </head>
  <body>
   
    <!-- Header -->
    <header class="bg-primary text-white" style="padding: 15px;">
      <div class="container">
        <h1>Cửa Hàng Sách Uy tín số 1 Việt Nam</h1>
      </div>
    </header>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="/">Logo</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav"> 
            <li class="nav-item">
              <a class="nav-link" href="/">Xem tất cả</a>
            </li>
            <%  for( let c of loaiSach){ %>
                <li class="nav-item">
                  <a class="nav-link"  href="/cat/<%= c.idCategory %>"><%=c.nameCategory%></a>
                </li>
             <%}%>
             <li class="nav-item">
              <a class="nav-link"  href="/admin/">Quản trị sản phẩm</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main style="min-height: 631px; clear: both;">
       
        <div class="container mt-5">
           
          <% if (productDetails && productDetails.length > 0) { %>
            <h2 style="text-align: center; margin-bottom: 20px;">Chi tiết sản phẩm của <%= productDetails[0].nameProduct %> </h2>
            <aside>
                <img src="/images/<%= productDetails[0].images %>" alt="<%= productDetails[0].nameProduct %>">

            </aside>
            <article>
                <h2><%= productDetails[0].nameProduct %></h2>
                <p>Giá: <%= productDetails[0].priceProduct %> VNĐ</p>
                <p>Description: <%= productDetails[0].sortDescription %></p>
                <!-- Add more details as needed -->
            </article>
            
          <% } else { %>
            <p>Product not found.</p>
          <% } %>
        </div>
      </main>
      
      

    <!-- Footer -->
    <footer class="bg-dark text-white mt-5" style="min-height: 100px; clear: both;">
      <div class="container">
        <p>&copy; 2023 Your Website</p>
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>



